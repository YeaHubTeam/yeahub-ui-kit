{
  "compilerOptions": {
    "outDir": "./build/",
    "module": "ESNext",
    "pretty": true,
    "target": "es6",
    "jsx": "react-jsx",
    "lib": [ "es2015", "dom" ],
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "declaration": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "./src/stories"]
}
